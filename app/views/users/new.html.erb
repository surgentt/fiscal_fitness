<% provide(:title, 'Sign Up') %>
<h2>Join our Email List</h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.submit "Add Me to Email list", class: "button" %>
      </div>
    <% end %>
  </div>
</div>

