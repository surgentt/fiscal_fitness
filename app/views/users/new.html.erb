<% provide(:title, 'Sign Up') %>

<div class="wrapper">
  <h2>Join our Email List</h2>

  <div>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.submit "Add Me to Email list", class: "button" %>
      </div>
    <% end %>
  </div>
</div>